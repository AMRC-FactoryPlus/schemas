{
  "$id": "https://raw.githubusercontent.com/AMRC-FactoryPlus/schemas/main/Vision/Vision_System-v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "Schema_UUID": {
      "const": "3e1b966d-71af-47b0-9bc0-837f95c9f0e8"
    },
    "Instance_UUID": {
      "description": "The unique identifier for this object. (A UUID specified by RFC4122).",
      "type": "string",
      "format": "uuid"
    },
    "Measurement_Count": {
      "allOf": [
        {
          "$ref": "https://raw.githubusercontent.com/AMRC-FactoryPlus/schemas/main/Common/Metric-v1.json"
        },
        {
          "properties": {
            "Documentation": {
              "default": "The total number of measurements made by this vision system"
            },
            "Sparkplug_Type": {
              "enum": [
                "UInt8",
                "UInt16LE",
                "UInt16BE",
                "UInt32LE",
                "UInt32BE",
                "UInt64LE",
                "UInt64BE"
              ]
            },
            "Eng_Unit": {
              "default": ""
            },
            "Eng_Low": {
              "default": "0"
            },
            "Eng_High": {
              "default": ""
            }
          }
        }
      ]
    }
  },
  "required": [
    "Schema_UUID",
    "Instance_UUID"
  ]
}
