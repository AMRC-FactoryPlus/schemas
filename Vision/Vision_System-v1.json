{
  "$id": "https://raw.githubusercontent.com/AMRC-FactoryPlus/schemas/main/Vision/Vision_System-v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "Schema_UUID": {
      "const": "3e1b966d-71af-47b0-9bc0-837f95c9f0e8"
    },
    "Instance_UUID": {
      "description": "The unique identifier for this object. (A UUID specified by RFC4122).",
      "type": "string",
      "format": "uuid"
    },
    "Device_Information": {
      "$ref": "https://raw.githubusercontent.com/AMRC-FactoryPlus/schemas/main/Common/Device_Information-v1.json"
    },
    "Measurement_Count": {
      "allOf": [
        {
          "$ref": "https://raw.githubusercontent.com/AMRC-FactoryPlus/schemas/main/Common/Metric-v1.json"
        },
        {
          "properties": {
            "Documentation": {
              "default": "The total number of measurements made by this vision system"
            },
            "Sparkplug_Type": {
              "enum": [
                "UInt8",
                "UInt16LE",
                "UInt16BE",
                "UInt32LE",
                "UInt32BE",
                "UInt64LE",
                "UInt64BE"
              ]
            }
          }
        }
      ]
    },
    "Program_Number": {
      "allOf": [
        {
          "$ref": "https://raw.githubusercontent.com/AMRC-FactoryPlus/schemas/main/Common/Metric-v1.json"
        },
        {
          "properties": {
            "Documentation": {
              "default": "The number of the currently loaded program"
            },
            "Sparkplug_Type": {
              "enum": [
                "UInt8",
                "UInt16LE",
                "UInt16BE",
                "UInt32LE",
                "UInt32BE",
                "UInt64LE",
                "UInt64BE"
              ]
            }
          }
        }
      ]
    },
    "Total_Status": {
      "allOf": [
        {
          "$ref": "https://raw.githubusercontent.com/AMRC-FactoryPlus/schemas/main/Common/Metric-v1.json"
        },
        {
          "properties": {
            "Documentation": {
              "default": "The success status of the inspection"
            },
            "Sparkplug_Type": {
              "enum": ["Boolean"]
            }
          }
        }
      ]
    },
    "Inspection_Complete": {
      "allOf": [
        {
          "$ref": "https://raw.githubusercontent.com/AMRC-FactoryPlus/schemas/main/Common/Metric-v1.json"
        },
        {
          "properties": {
            "Documentation": {
              "default": ""
            },
            "Sparkplug_Type": {
              "enum": ["Boolean"]
            }
          }
        }
      ]
    },
    "Pattern_X_Position": {
      "allOf": [
        {
          "$ref": "https://raw.githubusercontent.com/AMRC-FactoryPlus/schemas/main/Common/Metric-v1.json"
        },
        {
          "properties": {
            "Documentation": {
              "default": "The X position of the pattern in the frame"
            },
            "Sparkplug_Type": {
              "enum": ["FloatLE", "FloatBE", "DoubleLE", "DoubleBE"]
            }
          }
        }
      ]
    },
    "Pattern_Y_Position": {
      "allOf": [
        {
          "$ref": "https://raw.githubusercontent.com/AMRC-FactoryPlus/schemas/main/Common/Metric-v1.json"
        },
        {
          "properties": {
            "Documentation": {
              "default": "The Y position of the pattern in the frame"
            },
            "Sparkplug_Type": {
              "enum": ["FloatLE", "FloatBE", "DoubleLE", "DoubleBE"]
            }
          }
        }
      ]
    }
  },
  "required": ["Schema_UUID", "Instance_UUID"]
}
