              "properties": {
                "Documentation": {
                  "default": ""
                },
                "Sparkplug_Type": {
                  "enum": [
                    "Int8",
                    "Int16LE",
                    "Int16BE",
                    "Int32LE",
                    "Int32BE",
                    "Int64LE",
                    "Int64BE",
                    "UInt8",
                    "UInt16LE",
                    "UInt16BE",
                    "UInt32LE",
                    "UInt32BE",
                    "UInt64LE",
                    "UInt64BE",
                    "FloatLE",
                    "FloatBE",
                    "DoubleLE",
                    "DoubleBE"
                  ]
                }
              }
            }
          ]
        },
        "Recoup_Damper_Position": {
          "allOf": [
            {
              "$ref": "https://raw.githubusercontent.com/AMRC-FactoryPlus/schemas/main/Common/Metric-v1.json"
            },
            {
              "properties": {
                "Documentation": {
                  "default": ""
                },
                "Sparkplug_Type": {
                  "enum": [
                    "Int8",
                    "Int16LE",
                    "Int16BE",
                    "Int32LE",
                    "Int32BE",
                    "Int64LE",
                    "Int64BE",
                    "UInt8",
                    "UInt16LE",
                    "UInt16BE",
                    "UInt32LE",
                    "UInt32BE",
                    "UInt64LE",
                    "UInt64BE",
                    "FloatLE",
                    "FloatBE",
                    "DoubleLE",
                    "DoubleBE"
                  ]
                }
              }
            }
          ]
        }
      },
      "required": []
    },
    "Temperature_Control_Loops": {
      "patternProperties": {
        "^[a-zA-Z0-9_]*$": {
          "$ref": "https://raw.githubusercontent.com/AMRC-FactoryPlus/schemas/main/Plant/Temperature_Control_Loop-v1.json"
        }
      },
      "type": "object"
    }
  },
  "required": [
    "Schema_UUID",
    "Instance_UUID"
  ]
}